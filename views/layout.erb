<!doctype html>
<html lang="en-US">
  <head>
    <title>Bowling League Application</title>
    <meta charset="UTF-8">
  </head>
  <body>
    <header>
      <% if session[:username] %>
        <a href="/">League Home</a>
        <form method="post" action="/users/signout">
          <p> 
            Welcome <%= session[:username] %>! You are currently signed in.
            <button type="submit">Sign Out</button>
          </p>
        </form>
      <% end %>
    </header>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>
    </main>
  </body>
</html>
